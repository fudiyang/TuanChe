<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.bwf.tuanche.PjActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <ImageView
           android:id="@+id/img_pj_back"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@mipmap/icon_back"
           android:layout_margin="10dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="评价详情"
           android:textSize="20dp"
           android:layout_margin="10dp"
           android:layout_centerHorizontal="true"
           />
   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pingfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总体评分"
            android:textSize="15dp"
            android:layout_margin="10dp"
            />
        <RatingBar
            android:id="@+id/app_ratingbar_x"
            style="@style/MyRatingBarsmall"
            android:layout_marginTop="4dip"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:numStars="5"
            android:isIndicator="true"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_011"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/tv_012"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/tv_013"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="15dp"
            />
    </LinearLayout>
    <com.bwf.tuanche.View.RefreshListView
        android:id="@+id/pj_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
