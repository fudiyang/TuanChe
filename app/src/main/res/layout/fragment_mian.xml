<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwf.tuanche.ManiFragment.MianFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="20sp"
            android:textColor="@color/balck"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_shezhi"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhui"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@mipmap/user_bg_head">
            <TextView
                android:id="@+id/tv_denglu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你还没有登录哦~"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/balck"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="马上登录"
                android:textColor="@color/white"
                android:background="@drawable/botton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_denglu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_tuanchequan"
                android:text="团车卷"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_jilu"
                android:text="浏览记录"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_dadada"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="我的订单"
            android:gravity="center_vertical"
            android:textColor="@color/balck"
            android:layout_marginLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/qianhui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_wode_mai"
                android:text="买车订单"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_wode_yangche"
                android:text="养车订单"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_wode_maiche"
                android:text="卖车订单"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_dadada"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="我的资产"
            android:gravity="center_vertical"
            android:textColor="@color/balck"
            android:layout_marginLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/qianhui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_wode_hongbao"
                android:text="红包"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_diyongquan"
                android:text="优惠卷"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_libao"
                android:text="大礼包"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_dadada"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加油记录"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/balck"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/arrow_right_my_gray"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/qianhui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保险订单"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/balck"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/arrow_right_my_gray"
                android:layout_alignParentRight="true" 
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_dadada"/>
        </LinearLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_dadada"/>
</LinearLayout>
