<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwf.tuanche.ManiFragment.PageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_city_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:drawableRight="@mipmap/icon_top_add_arrow"
            android:layout_marginLeft="5dp"
            android:text="达州"/>
        <EditText
            android:id="@+id/ed_seach"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:drawableLeft="@mipmap/icon_top_icon_search"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:hint="请输入品牌，车型"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_top_icon_saomiao"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_pei"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <fragment
            android:id="@+id/fre_one"
            android:name="com.bwf.tuanche.ManiFragment.fragmentone.OneFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/fre_two"
            android:name="com.bwf.tuanche.ManiFragment.fragmentone.TwoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/fre_three"
            android:name="com.bwf.tuanche.ManiFragment.fragmentone.ThreeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/fre_four"
            android:name="com.bwf.tuanche.ManiFragment.fragmentone.FourFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

      </LinearLayout>
    </ScrollView>
</LinearLayout>
