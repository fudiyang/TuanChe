<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:id="@+id/line001"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/search_back"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/icon_back"/>
        <EditText
            android:id="@+id/edit_search"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/search_bg"
            android:drawableLeft="@mipmap/search"
            android:hint="请输入品牌、车型"/>
        <TextView
            android:id="@+id/text_search"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:text="搜索"/>

    </LinearLayout>
    <ListView
        android:id="@+id/list_search"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/line001"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_search01"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="20dp"
        android:layout_below="@id/line001"
        android:text="热门搜索"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:visibility="visible"/>
    <GridView
        android:id="@+id/search_gridview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:numColumns="auto_fit"
        android:columnWidth="100dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:padding="20dp"
        android:minHeight="20dp"
        android:layout_below="@id/text_search01"
        android:stretchMode="columnWidth"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/text_searchhistory"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="350dp"
        android:text="搜索历史"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        />
    <ListView
        android:id="@+id/search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_searchhistory"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

    <Button
        android:id="@+id/button_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_history"
        android:layout_centerInParent="true"
        android:text="清除搜索历史"/>


</RelativeLayout>