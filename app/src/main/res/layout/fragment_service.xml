<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwf.tuanche.ManiFragment.ServiceFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="客服"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/balck"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qianhui"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_kefu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/bg_kefu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/but_kefu"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="拨打客服电话 400-6969-123"
            android:background="@drawable/botton"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_kefu"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_but_kefutime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服工作时间:周一到周日09:00-18:00"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/but_kefu"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不方便打电话的亲，还可以留言哦~"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_but_kefutime"
            android:layout_marginTop="150dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="我要留言"
            android:background="@drawable/botton2"
            android:textColor="@color/red"
            android:layout_below="@id/tv_beizhu"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</LinearLayout>
